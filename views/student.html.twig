{% extends "base.html.twig" %}

{% block title %}{{ student.getName }}{% endblock %}

{% block content %}
    <h3>{{ student.getName }}'s Information</h3>
    <h4>Enrollment Date: {{ student.getEnrollmentDate }}</h4>

    <form action="/students/{{ student.getId }}/enroll" method="post">
        <label for="course">Enroll in a new course</label>
        <select name="course" id="course">
            {% for course in all_courses %}
            <option value="{{ course.getId }}">{{ course.getNumber }}: {{ course.getName }}</option>
            {% endfor %}
        </select>
        <button type="submit">Enroll</button>
    </form>

    {% if courses is not empty %}
    <ul>
        {% for course in courses %}
        <li>{{ course.getNumber }}: {{ course.getName }}</li>
        {% endfor %}
    </ul>
    {% endif %}

{% endblock %}
